<UserControl x:Class="CalculatorView.Controls.TextBoxFileBrowser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CalculatorView.Controls"
             mc:Ignorable="d" 
             Name="TBFB"
             d:DesignHeight="26" d:DesignWidth="300">
    <Grid HorizontalAlignment="stretch" VerticalAlignment="Stretch">
        <TextBox Name="TxtFile" Text="{Binding Path=Path, ElementName=TBFB}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
        <Button Content="..." HorizontalAlignment="right" Margin="0,0,3,0" Name="Browse" VerticalAlignment="Center" Height="18" Width="18" Click="Browse_Click"/>
    </Grid>
</UserControl>
