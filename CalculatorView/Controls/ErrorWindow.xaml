<Window x:Class="CalculatorView.Controls.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalculatorView.Controls"
        mc:Ignorable="d"
        Title="ErrorWindow" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="32"/>
        </Grid.RowDefinitions>

        <TextBox Grid.Row="1" Name="TxtMessages" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5" IsReadOnly="True"/>

        <Button Grid.Row="2" Content="Close" Name="CancelButton" IsCancel="True" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Center" Click="CancelButton_Click"/>
    </Grid>
</Window>
